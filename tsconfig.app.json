{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist/out-tsc/app",
      "types": [],
      "baseUrl": ".",
      "paths": {
      "@/*": [
        "./src/*"
      ]
    }
    },
    "files": [
      "src/main.js",
      "src/polyfills.ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/test.ts",
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ]
  }